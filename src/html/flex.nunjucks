        <style>
            .wrap {
                position: relative;
                margin: 0 auto;
                max-width: 1024px;
                z-index: 10;
            }

            .container {
                display: flex;
                flex-wrap: wrap;
            }

            .container > *:nth-child(n) {
                width: auto;
                height: auto;
                margin-top: 0;
                margin-left: 20px;
            }

            .container > *:nth-child(3n + 1),
            .container > *:nth-child(3n + 2),
            .container > *:nth-child(3n + 3) {
                width: calc(99.99% * 1/3 - (20px - 20px * 1/3));
            }

            .container > *:nth-child(3n + 1) {
                margin-left: 0;
            }

            .container > *:nth-child(n + 4) {
                margin-top: 20px;
            }


            .card-teaser {
                display: flex;
            }

            .card-teaser__content {
                display: flex;
                flex-direction: column;
                flex: 1;
            }

            .card-teaser__image {
                flex-shrink: 0;
                }
                .card-teaser__image img {
                    max-width: 100%;
                    vertical-align: middle;
                    }

            .card-teaser__description {
                display: flex;
                flex-direction: row;
                background: orange;
                flex-grow: 1;
                align-items: center;
            }
        </style>
    </head>
